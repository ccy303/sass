{
    "easycom": {
        "autoscan": true,
        "custom": {
            "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
            "^cui-(.*)": "@/components/$1/index.vue",
            "^base-(.*)": "@/gxota/ui/$1/index.vue"
        }
    },
    "pages": [
        { "path": "pages/index/index", "style": {} },
        { "path": "pages/home/index", "style": {} },
        { "path": "pages/tour/index", "style": {} },
        { "path": "pages/menu/menu", "style": {} },
        { "path": "pages/take-foods/take-foods", "style": {} },
        { "path": "pages/mine/index", "style": {} }
    ],
    "subPackages": [
        {
            "root": "subPages/stall",
            "pages": [{ "path": "index", "uiTitle": "我的摊位" }, { "path": "detail" }]
        },
        {
            "root": "subPages/goods",
            "pages": [
                { "path": "categorizeList", "uiTitle": "分类管理" },
                { "path": "categorizeDtl", "uiTitle": "分类管理" },
                { "path": "goodsList", "uiTitle": "商品列表" },
                { "path": "goodsDtl", "uiTitle": "商品管理" }
            ]
        },
        {
            "root": "subPages/pay",
            "pages": [{ "path": "pay", "uiTitle": "订单结算" }]
        },
        {
            "root": "subPages/orders",
            "pages": [
                { "path": "orders", "uiTitle": "订单列表" },
                { "path": "detail", "uiTitle": "订单详情" },
                { "path": "invoice", "uiTitle": "奈雪的茶" },
                { "path": "review", "uiTitle": "奈雪的茶" },
                { "path": "remark", "uiTitle": "添加备注" },
                { "path": "address", "uiTitle": "选择店铺" }
            ]
        },
        {
            "root": "subPages/packages",
            "pages": [
                { "path": "index", "uiTitle": "券包列表" },
                { "path": "detail", "uiTitle": "券包详情" }
            ]
        }
    ],
    "globalStyle": {
        "navigationStyle": "custom",
        "navigationBarTextStyle": "white",
        "navigationBarBackgroundColor": "#000",
        "backgroundColor": "#000"
    },
    "tabBar": {
        "blurEffect": "extralight",
        "color": "#AC936B",
        "selectedColor": "#AC936B",
        "borderStyle": "white",
        "backgroundColor": "#FFFCF3",
        "list": [
            { "pagePath": "pages/home/index", "iconPath": "./static/home.png", "selectedIconPath": "./static/home_active.png", "text": "首页" },
            { "pagePath": "pages/menu/menu", "iconPath": "./static/drink.png", "selectedIconPath": "./static/drink_active.png", "text": "点餐" },
            { "pagePath": "pages/take-foods/take-foods", "iconPath": "./static/take.png", "selectedIconPath": "./static/take_active.png", "text": "取餐" },
            { "pagePath": "pages/mine/index", "iconPath": "./static/mine.png", "selectedIconPath": "./static/mine_active.png", "text": "我的" }
        ]
    }
}
